<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="pizzaService"
          class="com.javalab.pizzaservice.services.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>
    <bean name="orderService"
          class="com.javalab.pizzaservice.services.SimpleOrderService">
        <constructor-arg ref="pizzaService"/>
        <constructor-arg ref="orderRepository"/>
    </bean>

    <!--<bean name="T1"
          class="com.javalab.pizzaservice.services.TestSomeService"
          destroy-method="destroy"
        >
    </bean>-->

    <bean class="com.javalab.pizzaservice.services.UsageSomeService"
    init-method="init">
            <constructor-arg>
                <bean class="com.javalab.pizzaservice.services.TestSomeService"/>
            </constructor-arg>
    </bean>
</beans>